@{
  Layout = "_Layout";
}

@model Library.Models.Patron
<main>
  <h4>Add a new Patron</h4>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.PatronName)
    @Html.TextBoxFor(model => model.PatronName)

    @Html.Label("Select Book")
    @Html.DropDownList("BookId")

    <input type="submit" value="Add new Patron" class="btn btn-default" />
  }
  <p>@Html.ActionLink("Show all Patrons", "Index")</p>
</main>